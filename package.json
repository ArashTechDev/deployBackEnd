{
  "name": "bytebasket-backend",
  "version": "1.0.0",
  "description": "ByteBasket Food Bank Management System - Backend API",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "dev:setup": "node scripts/dev-start.js",
    "setup:demo": "node scripts/setup-demo.js",
    "setup:mongodb": "node src/db/models/inventory/createInventory.js",
    "setup:users": "node src/db/models/users/createUserCollection.js",
    "setup:foodbanks": "node src/db/models/foodbanks/createFoodbanks.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "test": "jest --config tests/jest.config.js",
    "test:ci": "jest --config tests/jest.config.js --coverage --watchAll=false --passWithNoTests",
    "test:watch": "jest --config tests/jest.config.js --watch",
    "test:coverage": "jest --config tests/jest.config.js --coverage",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:unit": "jest --testPathPattern=tests/unit",
    "db:test:setup": "psql -h localhost -U postgres -d bytebasket_test -f src/models/migrations/init.sql",
    "db:test:seed": "node src/models/seeds/testSeed.js",
    "seed:dietary": "node scripts/seedDietaryRestrictions.js",
    "check:db": "node scripts/checkDatabase.js"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/tests/env-setup.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.mock.test.js",
      "!**/tests/inventory/inventory.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/models/migrations/**",
      "!src/models/seeds/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "clearMocks": true,
    "restoreMocks": true
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.5.0",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "fast-csv": "^4.3.6",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.1",
    "moment": "^2.29.4",
    "mongoose": "^8.16.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "nodemailer": "^6.10.1",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "food-bank",
    "inventory",
    "mongodb",
    "express",
    "nodejs",
    "api"
  ],
  "author": "ByteBasket Team",
  "license": "MIT"
}
